{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["ES6", "dom"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
